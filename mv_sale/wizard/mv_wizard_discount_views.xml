<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="mv_wiard_discount_view_form" model="ir.ui.view">
		<field name="name">mv_wiard_discount_view_form</field>
		<field name="model">mv.wizard.discount</field>
		<field name="arch" type="xml">
			<form>
				<field name="order_id" invisible="True"/>
				<field name="partner_id" invisible="True"/>
				<field name="currency_id" invisible="True"/>
				<group>
					<group>
						<label for="amount" string="Số tiền chiết khấu"/>
						<div class="o_row">
							<field name="amount" class="oe_inline" nolabel="True"/>
							<field name="currency_symbol" class="oe_inline" nolabel="True"/>
						</div>
						<label for="amount_partner" string="Số tiền chiết khấu hiện có"/>
						<div class="o_row o_row_readonly">
							<field name="amount_partner" class="oe_inline" nolabel="True" readonly="True"/>
							<field name="currency_symbol" class="oe_inline" nolabel="True"/>
						</div>
						<field string="Số tiền có thể chiết khấu tối đa" name="bonus_max" widget="monetary" options="{'currency_field': 'currency_id'}"/>
						<field string="Số tiền đã chiết khấu" name="bonus_order" widget="monetary" options="{'currency_field': 'currency_id'}"/>
					</group>
				</group>
				<footer>
					<button name="action_confirm" type="object" string="Xác nhận" class="btn-primary"/>
					<button string="Hủy bỏ" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>
</odoo>
