<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mv_wiard_discount_view_form" model="ir.ui.view">
        <field name="name">mv_wiard_discount_view_form</field>
        <field name="model">mv.wizard.discount</field>
        <field name="arch" type="xml">
            <form>
                <field name='sale_id' invisible="1"/>
                <field name='partner_id' invisible="1"/>
                <group>
                    <group>
                        <field name="amount"/>
                        <field name="amount_partner"/>
                        <field name="bonus_max"/>
                        <field name="bonus_order"/>
                    </group>
                </group>
                <footer>
                    <button name="button_confirm" type="object" string="Xác nhận" class="btn-primary" data-hotkey="q"/>
                    <button string="Discard" special="cancel" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
