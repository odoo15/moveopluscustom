<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="mv_wiard_discount_view_form" model="ir.ui.view">
		<field name="name">mv_wiard_discount_view_form</field>
		<field name="model">mv.wizard.discount</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<field name="sale_id" invisible="True"/>
					<field name="partner_id" invisible="True"/>
					<group>
						<group>
							<field name="currency_id" invisible="True"/>
							<label for="amount"/>
							<div class="o_row">
								<field name="amount" class="oe_inline" nolabel="True"/>
								<field name="currency_symbol" class="oe_inline" nolabel="True"/>
							</div>
							<field name="amount_partner" widget="monetary" options="{'currency_field': 'currency_id'}"/>
							<field name="bonus_max" widget="monetary" options="{'currency_field': 'currency_id'}"/>
							<field name="bonus_order" widget="monetary" options="{'currency_field': 'currency_id'}"/>
						</group>
						<group/>
					</group>
				</sheet>
				<footer>
					<button name="action_confirm" type="object" string="Xác nhận" class="btn-primary" data-hotkey="q"/>
					<button string="Discard" special="cancel" data-hotkey="x"/>
				</footer>
			</form>
		</field>
	</record>
</odoo>
