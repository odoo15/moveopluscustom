<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="salesperson_report_view_form" model="ir.ui.view">
		<field name="name">salesperson.report.form</field>
		<field name="model">salesperson.report</field>
		<field name="arch" type="xml">
			<form string="Salesperson's Analysis Report FORM" duplicate="false" create="false" edit="false" delete="false">
                <sheet>
	                <div class="oe_title pe-0">
                        <h1 class="d-flex justify-content-between align-items-center">
                            <div class="d-flex w-100">
                                <field name="sale_ref"/>
                            </div>
                        </h1>
                    </div>
                    <group>
                        <group string="Thông tin bán hàng" name="group_sale_order_info">
	                        <field name="sale_date_order" string="Ngày đặt hàng"/>
                        </group>
                        <group string="Thông tin Đại lý" name="group_customer_info">
                            <field name="partner_id" string="Đại lý" options="{'no_open': True}"/>
                            <field name="partner_shipping_id" string="Đại lý vận chuyển" options="{'no_open': True}"/>
                            <field name="delivery_address" string="Địa chỉ"/>
                        </group>
	                    <group string="Thông tin Sản phẩm" name="group_product_info">
		                    <field name="product_id" invisible="True"/>
		                    <field name="product_template_id" string="Sản phẩm" options="{'no_open': True}"/>
                            <field name="product_country_of_origin" string="Quốc Gia" options="{'no_open': True}"/>
                            <field name="product_barcode" string="Barcode"/>
                            <field name="product_att_size_lop" string="Size (lốp)"/>
                            <field name="product_att_ma_gai" string="Mã gai"/>
                            <field name="product_att_rim_diameter_inch" string="Đường kính Mâm"/>
                            <field name="serial_number" string="Mã vạch"/>
                            <field name="qrcode" string="QR-Code"/>
                            <field name="week_number" string="Số tuần" options="{'no_open': True}"/>
	                    </group>
                    </group>
                </sheet>
            </form>
		</field>
	</record>

	<record id="salesperson_report_view_tree" model="ir.ui.view">
		<field name="name">salesperson.report.tree</field>
		<field name="model">salesperson.report</field>
		<field name="arch" type="xml">
			<tree string="Salesperson's Analysis Report TREE" create="false" edit="false" delete="false" import="false">
				<field name="product_id" column_invisible="1"/>
				<field name="product_template_id" string="Sản phẩm" options="{'no_open': True}"/>
				<field name="serial_number" string="Mã vạch"/>
				<field name="qrcode" string="QR-Code"/>
				<field name="product_barcode" string="Barcode" optional="hidden"/>
				<field name="product_att_size_lop" string="Size (lốp)" optional="show"/>
				<field name="product_att_ma_gai" string="Mã gai" optional="show"/>
				<field name="product_att_rim_diameter_inch" string="Đường kính Mâm" optional="show"/>
				<field name="product_country_of_origin" string="Quốc Gia" options="{'no_open': True}" optional="show"/>
				<field name="week_number" column_invisible="1"/>
				<field name="sale_id" column_invisible="1"/>
				<field class="fw-bold" name="sale_ref" string="Mã SO" optional="show"/>
				<field name="partner_id" string="Đại lý" options="{'no_open': True}"/>
				<field name="partner_shipping_id" column_invisible="1"/>
				<field name="delivery_address" string="Địa chỉ giao hàng" optional="show"/>
				<field name="street" string="Đường" optional="show"/>
				<field name="wards_id" string="Phường" optional="show"/>
				<field name="district_id" string="Quận" optional="show"/>
				<field name="state_id" string="Thành phố" optional="show"/>
				<field name="country_id" string="Quốc gia" optional="show"/>
				<field name="sale_date_order" string="Ngày đặt hàng"/>
				<field name="sale_day_order" string="Ngày đặt"/>
				<field name="sale_month_order" string="Tháng đặt"/>
				<field name="sale_year_order" string="Năm đặt"/>
			</tree>
		</field>
	</record>

	<record id="salesperson_report_view_search" model="ir.ui.view">
		<field name="name">salesperson.report.search</field>
		<field name="model">salesperson.report</field>
		<field name="arch" type="xml">
			<search string="Salesperson's Analysis Report SEARCH">
				<field name="partner_id" operator="child_of" string="Đại lý" filter_domain="[
                        '|',
                        ('partner_id', 'ilike', self),
                        ('partner_email', 'ilike', self)]"/>
				<field name="product_template_id" operator="child_of" string="Sản phẩm" filter_domain="[
                        '|',
                        ('product_template_id', 'ilike', self),
                        ('product_template_id.name', 'ilike', self)]"/>
				<field name="serial_number" string="Mã vạch"/>
				<field name="qrcode" string="QR-Code"/>
				<field name="week_number" string="Số tuần"/>
				<group expand="0" string="Group By" colspan="16">
					<filter string="Đại lý" name="groupby_partner" context="{'group_by':'partner_id'}"/>
					<filter string="Quốc Gia" name="groupby_country" context="{'group_by':'country_id'}"/>
					<separator/>
					<filter string="Sản phẩm" name="groupby_product" context="{'group_by':'product_template_id'}"/>
					<filter string="Quốc Gia (Sản phẩm)" name="groupby_product_country" context="{'group_by':'product_country_of_origin'}"/>
					<separator/>
					<filter string="Mã vạch" name="groupby_serial_number" context="{'group_by':'serial_number'}"/>
					<filter string="QR-Code" name="groupby_qrcode" context="{'group_by':'qrcode'}"/>
				</group>
			</search>
		</field>
	</record>

	<record id="salesperson_report_action_view" model="ir.actions.act_window">
		<field name="name">Analysis Report</field>
		<field name="res_model">salesperson.report</field>
		<field name="view_mode">tree,form</field>
		<field name="search_view_id" ref="salesperson_report_view_search"/>
		<field name="view_id" ref="salesperson_report_view_tree"/>
		<field name="domain">[]</field>
		<field name="context">{}</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_empty_folder">
				No data yet, please update data!
			</p>
		</field>
	</record>
</odoo>
