<?xml version="1.0"?>
<odoo>
    <data>

        <!-- TREE VIEWS -->
        <record id="helpdesk_ticket_product_moves_tree_view" model="ir.ui.view">
            <field name="name">helpdesk.ticket.product.moves.tree</field>
            <field name="model">helpdesk.ticket.product.moves</field>
            <field name="arch" type="xml">
                <tree string="Helpdesk Ticket &amp; Product Moves LIST" create="0" edit="0" delete="1">
                    <field name="name" string="Lot/Serial Number"/>
                    <field name="helpdesk_ticket_id" string="Ticket" options="{'no_create': True, 'no_open': True}"/>
                    <field name="stock_move_line_id" string="Product Move" options="{'no_create': True, 'no_open': True}"/>
                    <field name="product_id" options="{'no_create': True, 'no_open': True}" optional="show"/>
                    <field name="lot_name" column_invisible="True"/>
                    <field name="reference" column_invisible="True"/>
                    <field name="quantity" column_invisible="True"/>
                    <field name="quantity_product_uom" column_invisible="True"/>
                    <field name="stock_move_id" column_invisible="True"/>
                    <field name="product_uom_id" column_invisible="True"/>
                </tree>
            </field>
        </record>

        <!-- SEARCH VIEWS -->
        <record id="helpdesk_ticket_product_moves_search_view" model="ir.ui.view">
            <field name="name">helpdesk.ticket.product.moves.search</field>
            <field name="model">helpdesk.ticket.product.moves</field>
            <field name="arch" type="xml">
                <search string="Helpdesk Ticket &amp; Product Moves SEARCH">
                    <field name="name" string="Lot/Serial Number" filter_domain="['|', ('name', 'ilike', self), ('lot_name', 'ilike', self)]"/>
                    <field name="helpdesk_ticket_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Helpdesk Ticket" name="groupby_helpdesk_ticket" context="{'group_by':'helpdesk_ticket_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- ACTION VIEW -->
        <record id="helpdesk_ticket_product_moves_action_overview" model="ir.actions.act_window">
            <field name="name">Overview</field>
            <field name="res_model">helpdesk.ticket.product.moves</field>
            <field name="view_mode">tree</field>
            <field name="search_view_id" ref="helpdesk_ticket_product_moves_search_view"/>
            <field name="view_id" ref="helpdesk_ticket_product_moves_tree_view"/>
            <field name="domain" eval="[]"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_empty_folder">
                    No data yet!
                </p>
            </field>
        </record>

    </data>
</odoo>
