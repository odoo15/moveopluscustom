<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Template: Warranty Activation (Support) -->
        <template id="mv_helpdesk_warranty_activation_template" name="Helpdesk: Submit a Ticket Warranty Activation Form">
            <t t-call="website.layout">
                <div id="wrap" class="container mt-4">
                    <div class="row mb16">
                        <div class="col-md-8 ps-4">
                            <!-- Parameters -->
                            <t t-set="type_is_sub_dealer_id"
                               t-value="env.ref('mv_helpdesk.type_guarantee_activation_for_sub_dealer').sudo().id or false"
                            />
                            <t t-set="type_is_end_user_id"
                               t-value="env.ref('mv_helpdesk.type_guarantee_activation_for_end_user').sudo().id or false"
                            />
                            <t t-set="ticket_type_objects"
                               t-value="request.env['helpdesk.ticket.type'].sudo().search([('id', 'in', [type_is_sub_dealer_id, type_is_end_user_id])], order='id') or []"
                            />
                            <div class="container">
                                <h2 class="text-muted">Gửi kích hoạt bảo hành</h2>
                                <div class="oe_structure" id="oe_structure_whelpdesk_warranty_activation_form_left"/>
                                <section class="s_text_block o_colored_level pt4 pb8"
                                         data-snippet="s_text_block"
                                         data-name="Text"
                                         style="background-image: none;"
                                >
                                    <div class="container s_allow_columns">
                                        <p class="o_default_snippet_text o_small">
                                            <font class="text-o-color-5">
                                                <em>
                                                    <strong>MOVEO PLUS luôn lắng nghe và giải quyết những khiếu nại của khách hàng nhanh chóng.</strong>
                                                </em>
                                            </font>
                                        </p>
                                    </div>
                                </section>
                                <span class="hidden"
                                      data-for="helpdesk_warranty_activation_form"
                                      t-att-data-values="{'team_id': team and team.id and team.use_website_helpdesk_warranty_activation or ''}"
                                />
                                <div id="helpdesk_warranty_activation_section">
                                    <section class="s_website_form pt16 pb16 o_colored_level" data-vcss="001" data-snippet="s_website_form" data-name="Form">
                                        <div class="container">
                                            <form id="helpdesk_warranty_activation_form"
                                                  action="/website/form/"
                                                  method="post"
                                                  enctype="multipart/form-data"
                                                  class="o_mark_required"
                                                  data-mark="*"
                                                  data-pre-fill="true"
                                                  data-success-mode="redirect"
                                                  data-success-page="/your-ticket-has-been-submitted"
                                                  data-model_name="helpdesk.ticket">
                                                <div class="s_website_form_rows row s_col_no_bgcolor">
                                                    <!-- Field: partner_name (Required) -->
                                                    <div class="mb-0 py-2 s_website_form_field col-12 s_website_form_required" data-type="char" data-name="Field">
                                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="helpdesk_warranty_input_partner_name">
                                                                <span class="s_website_form_label_content">Họ &amp; Tên</span>
                                                                <span class="s_website_form_mark">*</span>
                                                            </label>
                                                            <div class="col-sm">
                                                                <input id="helpdesk_warranty_input_partner_name"
                                                                       class="form-control s_website_form_input"
                                                                       type="text"
                                                                       name="partner_name"
                                                                       data-fill-with="name"
                                                                       required="1"
                                                                />
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- Field: partner_email (Required) -->
                                                    <div class="mb-0 py-2 s_website_form_field col-12 s_website_form_required" data-type="email" data-name="Field">
                                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                                            <label class="col-form-label col-sm-auto s_website_form_label " style="width: 200px" for="helpdesk_warranty_input_partner_email">
                                                                <span class="s_website_form_label_content">Email</span>
                                                                <span class="s_website_form_mark">*</span>
                                                            </label>
                                                            <div class="col-sm">
                                                                <input id="helpdesk_warranty_input_partner_email"
                                                                       class="form-control s_website_form_input"
                                                                       type="email"
                                                                       name="partner_email"
                                                                       data-fill-with="email"
                                                                       required="1"/>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- Field: name (Required, Invisible) -->
                                                    <div class="mb-0 py-2 s_website_form_field col-12 s_website_form_model_required s_website_form_field_hidden o_draggable" data-type="char" data-name="Field">
                                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                                            <label class="col-form-label col-sm-auto s_website_form_label " style="width: 200px" for="helpdesk_warranty_input_ticket_name">
                                                                <span class="s_website_form_label_content">Tiêu đề</span>
                                                                <span class="s_website_form_mark">*</span>
                                                            </label>
                                                            <div class="col-sm">
                                                                <input id="helpdesk_warranty_input_ticket_name"
                                                                       class="form-control s_website_form_input"
                                                                       type="text"
                                                                       name="name"
                                                                       data-fill-with="undefined"
                                                                       value="new"/>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- Field: ticket_type_id (Required) -->
                                                    <div class="mb-0 py-2 s_website_form_field col-12" data-type="many2one" data-name="Field">
                                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="helpdesk_warranty_select_ticket_type_id">
                                                                <span class="s_website_form_label_content">Loại</span>
                                                                <span class="s_website_form_mark">*</span>
                                                            </label>
                                                            <div class="col-sm">
                                                                <select id="helpdesk_warranty_select_ticket_type_id" name="ticket_type_id" class="form-select s_website_form_input" required="1" t-on-change="onChange">
                                                                    <option t-foreach="ticket_type_objects or []" t-as="type" t-key="type.id" t-att-value="type.id" t-att-selected="type.name == 'Kích Hoạt Bảo Hành Lốp Xe Continental (Sub)'">
                                                                        <t t-out="type.name"/>
                                                                    </option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- Field: sub_dealer_name (None Required) -->
                                                    <div class="mb-0 py-2 s_website_form_field col-12 s_website_form_field_hidden_if"
                                                         data-visibility-dependency="ticket_type_id"
                                                         t-att-data-visibility-condition="type_is_sub_dealer_id"
                                                         data-visibility-comparator="selected"
                                                         data-type="char"
                                                         data-name="Field">
                                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="helpdesk_warranty_input_sub_dealer_name">
                                                                <span class="s_website_form_label_content">Tên Đại lý mua hàng</span>
                                                            </label>
                                                            <div class="col-sm">
                                                                <input id="helpdesk_warranty_input_sub_dealer_name"
                                                                       class="form-control s_website_form_input"
                                                                       type="text"
                                                                       name="sub_dealer_name"
                                                                       data-fill-with="undefined"
                                                                />
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- Field: license_plates (None Required) -->
                                                    <div class="mb-0 py-2 s_website_form_field col-12 s_website_form_field_hidden_if"
                                                         data-visibility-dependency="ticket_type_id"
                                                         t-att-data-visibility-condition="type_is_end_user_id"
                                                         data-visibility-comparator="selected"
                                                         data-type="char"
                                                         data-name="Field">
                                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="helpdesk_warranty_input_license_plates">
                                                                <span class="s_website_form_label_content">Biển số xe</span>
                                                            </label>
                                                            <div class="col-sm">
                                                                <input id="helpdesk_warranty_input_license_plates"
                                                                       class="form-control s_website_form_input"
                                                                       type="text"
                                                                       name="license_plates"
                                                                       data-fill-with="undefined"
                                                                />
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- Field: mileage (None Required) -->
                                                    <div class="mb-0 py-2 s_website_form_field col-12 s_website_form_field_hidden_if"
                                                         data-visibility-dependency="ticket_type_id"
                                                         t-att-data-visibility-condition="type_is_end_user_id"
                                                         data-visibility-comparator="selected"
                                                         data-type="char"
                                                         data-name="Field">
                                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="helpdesk_warranty_input_mileage">
                                                                <span class="s_website_form_label_content">Số Km hiện tại</span>
                                                            </label>
                                                            <div class="col-sm">
                                                                <input id="helpdesk_warranty_input_mileage"
                                                                       class="form-control s_website_form_input"
                                                                       type="text"
                                                                       name="mileage"
                                                                       data-fill-with="undefined"
                                                                />
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- Field: portal_lot_serial_number (Required) -->
                                                    <div class="mb-0 py-2 s_website_form_field col-12 s_website_form_required" data-type="text" data-name="Field">
                                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="helpdesk_warranty_input_portal_lot_serial_number">
                                                                <span class="s_website_form_label_content">Số Lô/Số Mã Vạch</span>
                                                                <span class="s_website_form_mark">*</span>
                                                            </label>
                                                            <div class="col-sm">
                                                                <textarea id="helpdesk_warranty_input_portal_lot_serial_number"
                                                                          class="form-control s_website_form_input"
                                                                          name="portal_lot_serial_number"
                                                                          required="1"
                                                                          rows="5"
                                                                          spellcheck="false"
                                                                />
                                                                <span id="s_website_form_result"/>
                                                                <div id="qr-reader" style="width: 360px;"></div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- UPLOAD: attachment (None Required) -->
                                                    <div class="mb-0 py-2 s_website_form_field col-12 s_website_form_custom" data-type="binary" data-name="Field">
                                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                                            <label class=" col-sm-auto s_website_form_label " style="width: 200px" for="helpdesk_warranty_upload_ticket_attachments">
                                                                <span class="s_website_form_label_content">Tệp đính kèm</span>
                                                            </label>
                                                            <div class="col-sm">
                                                                <input type="file" class="form-control s_website_form_input" name="Attachment" id="helpdesk_warranty_upload_ticket_attachments"/>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- Field: team_id (Invisible) -->
                                                    <div class="mb-0 py-2 s_website_form_field col-12 s_website_form_dnone" data-name="Field">
                                                        <div class="row s_col_no_resize s_col_no_bgcolor">
                                                            <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px">
                                                                <span class="s_website_form_label_content"/>
                                                            </label>
                                                            <div class="col-sm">
                                                                <input type="hidden" class="form-control s_website_form_input" name="team_id" id="helpdesk_warranty_hidden_team_id"/>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- ACTION: Submit Warranty Activation Ticket -->
                                                    <div class="mb-0 py-2 col-12 s_website_form_submit" data-name="Submit Button">
                                                        <div style="width: 200px;" class="s_website_form_label"/>
                                                        <a href="#"
                                                           role="button"
                                                           class="btn btn-primary btn-lg s_website_form_send o_default_snippet_text"
                                                           style="background-color: #461885; border-color: #461885;">
                                                            Gửi kích hoạt bảo hành
                                                        </a>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </section>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4" id="right-column">
                            <div class="oe_structure" id="oe_structure_whelpdesk_warranty_activation_sidebar_right">
                                <section class="s_text_image pt32 pb32 o_colored_level" data-snippet="s_text_image" data-name="Text - Image" style="background-image: none;">
                                    <div class="container">
                                        <div class="row o_grid_mode" data-row-count="6">
                                            <div class="o_colored_level o_grid_item g-col-lg-5 g-height-6 col-lg-5 o_grid_item_image"
                                                 style="grid-row-start: 1; grid-column-start: 7; grid-row-end: 7; grid-column-end: 12; z-index: 2; width: 100%;">
                                                <img src="/mv_website_helpdesk/static/src/img/lot-serial-number-where-to-scanning.webp"
                                                     alt="Lot/Serial Number where to scanning"
                                                     class="img img-fluid mx-auto o_we_custom_image"
                                                     data-mimetype="image/webp"
                                                     data-original-id="5830"
                                                     data-original-src="/mv_website_helpdesk/static/src/img/lot-serial-number-where-to-scanning.jpg"
                                                     data-mimetype-before-conversion="image/jpeg"
                                                     data-resize-width="690"
                                                     loading="lazy"/>
                                            </div>
                                            <div class="o_colored_level o_grid_item g-height-4 g-col-lg-6 col-lg-6"
                                                 style="z-index: 1; grid-row-start: 2; grid-column-start: 1; grid-row-end: 6; grid-column-end: 7; width: 100%;">
                                                <h3 class="o_default_snippet_text">Hình ảnh Kích Hoạt Bảo Hành</h3>
                                                <p class="o_default_snippet_text">Đính kèm hình ảnh số seri của Sản Phẩm</p>
                                            </div>
                                        </div>
                                    </div>
                                </section>
                            </div>
                        </div>
                    </div>
                </div>
                <script src="https://unpkg.com/html5-qrcode"></script>
                <script type="text/javascript">
                    const list = [];
                    function onScanSuccess(decodedText, decodedResults) {
                        if (!list.includes(decodedText)) {
                            list.push(decodedText);
                        }
                        const inputData = document.getElementById("helpdesk_warranty_input_portal_lot_serial_number");
                        if (!inputData.value.includes(decodedText)) {
                            inputData.value += decodedText + ",";
                        }
                    };

                    function onScanError(errorMessage) {
                        console.error(errorMessage);
                        // Handle the error, e.g., display a message to the user.
                    };

                    const formatsToSupport = [
                        Html5QrcodeSupportedFormats.QR_CODE,
                        Html5QrcodeSupportedFormats.AZTEC,
                        Html5QrcodeSupportedFormats.CODABAR,
                        Html5QrcodeSupportedFormats.CODE_39,
                        Html5QrcodeSupportedFormats.CODE_93,
                        Html5QrcodeSupportedFormats.CODE_128,
                        Html5QrcodeSupportedFormats.EAN_13,
                        Html5QrcodeSupportedFormats.EAN_8,
                        Html5QrcodeSupportedFormats.UPC_A,
                        Html5QrcodeSupportedFormats.UPC_E,
                        Html5QrcodeSupportedFormats.UPC_EAN_EXTENSION,
                    ];

                    let config = {
                        fps: 10,
                        qrbox: { width: 100, height: 100 },
                        rememberLastUsedCamera: false,
                        showTorchButtonIfSupported: false,
                        supportedScanTypes: [Html5QrcodeScanType.SCAN_TYPE_CAMERA]
                    };

                    const html5QrcodeScanner = new Html5QrcodeScanner(
                        "qr-reader",
                        {
                            fps: 10,
                            qrbox: { width: 300, height: 100 },
                            formatsToSupport: formatsToSupport
                        },
                        /* verbose= */ false);

                    html5QrcodeScanner.render(onScanSuccess, onScanError);
                </script>
            </t>
        </template>
    </data>

    <data noupdate="1">
        <!-- Page: Helpdesk Warranty Activation -->
        <record id="mv_helpdesk_warranty_activation_website_page" model="website.page">
            <field name="is_published">True</field>
            <field name="url">/kich-hoat-bao-hanh</field>
            <field name="view_id" ref="mv_helpdesk_warranty_activation_template"/>
            <field name="track">True</field>
        </record>
    </data>
</odoo>
